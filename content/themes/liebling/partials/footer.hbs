{{!--
This footer template is shared across all the pages.
--}}
<link rel="stylesheet" type="text/css" href="{{asset "css/footer.css"}}" />

<footer class="m-footer">
  <div class="m-footer__content">
    <div class="m-footer-copyright">
      <div class="flex-container">
        <div class="flex-item">
          <p>Apoiado por:</p>
          <div class="flex-container">
            <a href="https://www.kcl.ac.uk" target="_blank">
              <img class="flex-item" src="{{asset "images/KCL.jpg"}}" alt="King's College London" width="100">
            </a>
            <a href="https://wellcome.ac.uk" target="_blank">
              <img class="flex-item" src="{{asset "images/wellcome-logo-white.png"}}" alt="welcome trust" height="76">
            </a>
          </div>
        </div>
        <div class="flex-item">
          <span>{{@site.title}} &copy; {{date format="YYYY"}}</span>
          <div class="social-links">
            {{#if @site.facebook}}
            <a class="social-link" href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener"
              aria-label="Facebook">
              <span class="icon-facebook"></span>
            </a>
            {{/if}}
            {{#if @site.twitter}}
            <a class="social-link" href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener" aria-label="Twitter">
              <span class="icon-twitter"></span>
            </a>
            {{/if}}
            <a class="social-link" href="https://www.instagram.com/abalburdia/" aria-label="Instagram" target="_blank"
              rel="noopener">
              <span class="icon-instagram"> </span>
            </a>
          </div>
        </div>
        <div class="flex-item" style="width: 240px"></div>
        {{!-- <span>&nbsp; &bull; &nbsp;</span> --}}
      </div>
    </div>
  </div>
</footer>